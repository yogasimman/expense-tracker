<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker - Home</title>
    
    <!-- Import Google Font Poppins -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/sidebar.css">

</head>
<body>

    <!-- Sidebar -->
    <%- include("./partials/sidebar.ejs") %>
    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            <div class="title">Welcome <%= name %> <%= role %></div>
            <button class="support-btn">Contact Support</button>
        </div>

        <!-- Dashboard Section -->
        <div class="dashboard-section">
            <div class="card">
                <h3><i class="bi bi-clock-history"></i>
                    Pending Tasks</h3>
                <p> Pending Approval : 15</p>
                <p> Unreported Expenses : 10</p>
                <p> Unreported Advances : 3</p>
            </div>
            <div class="card">
                <h3>Quick Add</h3>
                <div class="quick-add-container">
                    <div class="quick-add-btn" id="create-expense"><i class="bi bi-receipt-cutoff"></i>&nbsp;Create Expense</div>
                    <div class="quick-add-btn" id="create-report"><i class="bi bi-card-heading"></i>&nbsp;Create report
                    </div>
                </div>
            </div>
            
        </div>

        <!-- Reports Summary -->
        <div class="reports-summary">
            <h3>Reports Summary</h3>
            <div class="report-stats">
                <div class="stat-box">
                    <h4>Most Recent Reports</h4>
                    <p>3 Reports</p>
                </div>
                <div class="stat-box">
                    <h4>Unsubmitted Reports</h4>
                    <p>1 Reports</p>
                </div>
                <div class="stat-box">
                    <h4>Awaiting Approval</h4>
                    <p>3 Reports</p>
                </div>
                <div class="stat-box">
                    <h4>Awaiting Reimbursement</h4>
                    <p>2 Reports</p>
                </div>
            </div>
        </div>
    </div>

        <!-- Modal -->
        <div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="reportModalLabel">New Report</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="reportForm">
                            <div class="mb-3">
                                <label for="reportName" class="form-label">Report Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="reportName" placeholder="eg: Trip to New York" required>
                            </div>
                            <div class="mb-3">
                                <label for="businessPurpose" class="form-label">Business Purpose</label>
                                <textarea class="form-control" id="businessPurpose" rows="3" placeholder="Max 500 characters"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Duration</label>
                                <div class="row">
                                    <div class="col">
                                        <input type="date" class="form-control" id="startDate" required>
                                    </div>
                                    <div class="col">
                                        <input type="date" class="form-control" id="endDate" required>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="trip" class="form-label">Trip</label>
                                <select class="form-select" id="trip" required>
                                    <option selected>Select</option>
                                    <% trips.forEach(function(trip) { %>
                                        <option value="<%= trip._id %>"><%= trip.tripName %></option>
                                    <% }); %>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="saveReportButton">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        
        document.getElementById('create-expense').addEventListener('click', function() {
            
            window.location.href = '/expenses';
        });

        document.getElementById('create-report').addEventListener('click', function() {
            
            window.location.href = '/reports';
        });

       
    </script>
    
</body>
</html>
